<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.switcher"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Chathead"
            android:label="@string/title_activity_chathead" >
        </activity>

        <service android:name=".ChatheadService" >
        </service>

        <activity
            android:name="com.example.applist.App"
            android:label="@string/title_activity_app" >
        </activity>
        <activity
            android:name="com.example.applist.AppListAdaptor"
            android:label="@string/title_activity_app_list_adaptor" >
        </activity>
        <activity
            android:name=".ListInstalledAdapter"
            android:label="@string/title_activity_list_installed_adapter" >
        </activity>
        <activity
            android:name="com.example.applist.ListInstalledApps"
            android:label="@string/title_activity_list_installed_apps" >
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="com.girish.listpreferences.Preferences"
            android:label="Preferences" >
        </activity>
        <activity
            android:name="com.girish.listpreferences.Dialog"
            android:label="Dialog" >
        </activity>
        <activity
            android:name="com.girish.listpreferences.Base"
            android:label="Base" >
        </activity>
        <activity
            android:name="com.girish.listpreferences.Load"
            android:label="Load" >
        </activity>
        
    </application>

</manifest>
